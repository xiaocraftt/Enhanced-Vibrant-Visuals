{
  "format_version": "1.21.60",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:campfire_smoke_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/campfire_smoke"
      }
    },
    "components": {
      "minecraft:emitter_initialization": {
        "creation_expression": "v.sway_phase = math.random(0, 6.28); v.sway_rate = math.random(0.4, 0.9); v.drift_x = math.random(-0.04, 0.04); v.drift_z = math.random(-0.04, 0.04);"
      },

      "minecraft:emitter_shape_custom": {
        "offset": [
          "math.random(-0.12, 0.12)",
          "math.random(0.0, 0.08)",
          "math.random(-0.12, 0.12)"
        ],
        "direction": [ 0.0, 1.0, 0.0 ]
      },

      "minecraft:emitter_rate_manual": {
        "max_particles": 200
      },

      "minecraft:emitter_lifetime_expression": {
        "activation_expression": 1,
        "expiration_expression": 0
      },

      "minecraft:particle_initial_speed": "math.random(1.4, 2.4)",

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "6.0 + v.particle_random_1 * 3.0"
      },

      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [
          "v.drift_x + math.sin(v.sway_rate * v.particle_age + v.sway_phase) * 0.03",
          "0.68",
          "v.drift_z + math.cos(v.sway_rate * v.particle_age + v.sway_phase + 1.1) * 0.025"
        ],
        "linear_drag_coefficient": 1.1
      },

      "minecraft:particle_motion_collision": {
        "enabled": "v.particle_age > 1.2",
        "collision_radius": 0.18
      },

      "minecraft:particle_initialization": {
        "per_render_expression": "v.life_t = math.clamp(v.particle_age / v.particle_lifetime, 0, 1); v.size = math.lerp(0.0, 0.35, math.clamp(v.particle_age / 0.8, 0, 1)) * math.lerp(1.0, 1.22, math.pow(v.life_t, 0.5)) * math.lerp(1.0, 0.0, math.pow(v.life_t, 2.8)) + v.particle_random_1 * 0.06; v.alpha = math.lerp(0.0, 0.62, math.clamp(v.particle_age / 0.6, 0, 1)) * math.lerp(1.0, 0.0, math.pow(v.life_t, 1.4));"
      },

      "minecraft:particle_appearance_billboard": {
        "size": [ "v.size", "v.size" ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 1,
          "texture_height": 12,
          "uv": [ 0, "math.floor(v.particle_random_2 * 12)" ],
          "uv_size": [ 1, 1 ]
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": [
          "math.lerp(0.78, 0.52, math.pow(math.clamp(v.particle_age / v.particle_lifetime, 0, 1), 0.6)) + v.particle_random_3 * 0.08",
          "math.lerp(0.70, 0.50, math.pow(math.clamp(v.particle_age / v.particle_lifetime, 0, 1), 0.6)) + v.particle_random_1 * 0.06",
          "math.lerp(0.60, 0.52, math.pow(math.clamp(v.particle_age / v.particle_lifetime, 0, 1), 0.6)) + v.particle_random_2 * 0.05",
          "v.alpha"
        ]
      },

      "minecraft:particle_appearance_lighting": {}
    }
  }
}
