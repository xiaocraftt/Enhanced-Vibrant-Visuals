{
  "format_version": "1.21.60",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:enchanting_table_particle",
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/particle/particles"
      }
    },
    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },
      "minecraft:emitter_lifetime_once": {},
      "minecraft:emitter_shape_point": {},
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(0.6, 2.8)"
      },
      "minecraft:particle_motion_parametric": {
        "relative_position": [
          "v.pos = 1.0 - (v.particle_age / v.particle_lifetime); return v.direction.x * v.pos;",
          "v.direction.y * v.pos - math.pow((1.0 - v.pos), 2.8) * 1.05 + math.sin(v.particle_age * 8.0 + v.particle_random_1 * 6.28) * 0.04 * v.pos;",
          "v.direction.z * v.pos"
        ]
      },
      "minecraft:particle_appearance_billboard": {
        "size": [
          "(v.particle_random_1 * 0.04 + 0.038) * (1.0 + math.pow(1.0 - (v.particle_age / v.particle_lifetime), 0.5) * 0.45) * math.clamp(v.particle_age / 0.10, 0, 1)",
          "(v.particle_random_1 * 0.04 + 0.038) * (1.0 + math.pow(1.0 - (v.particle_age / v.particle_lifetime), 0.5) * 0.45) * math.clamp(v.particle_age / 0.10, 0, 1)"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "uv": [
            "v.particle_random_3 < 0.5 ? math.round(v.particle_random_2 * 14) * 8 + 8 : math.round(v.particle_random_2 * 10) * 8",
            "v.particle_random_3 < 0.5 ? 112 : 120"
          ],
          "uv_size": [ 8, 8 ]
        }
      },
      "minecraft:particle_appearance_tinting": {
        "color": [
          "math.lerp(0.45, 1.0, math.pow(1.0 - (v.particle_age / v.particle_lifetime), 2.2)) + v.particle_random_3 * 0.12",
          "math.lerp(0.84, 1.0, math.pow(1.0 - (v.particle_age / v.particle_lifetime), 1.8)) + v.particle_random_2 * 0.06",
          "math.lerp(1.00, 1.0, math.pow(1.0 - (v.particle_age / v.particle_lifetime), 1.0))",
          "math.lerp(0.55, 1.0, math.pow(1.0 - (v.particle_age / v.particle_lifetime), 1.4)) * math.clamp(v.particle_age / 0.10, 0, 1)"
        ]
      }
    }
  }
}
