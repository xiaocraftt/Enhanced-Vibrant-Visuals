      },

      "minecraft:particle_appearance_tinting": {
        "color": [
          1.0,
          0.62,
          0.05,
          "variable.alpha * 0.16"
        ]
      },

      "minecraft:particle_appearance_frame": {
        "frames": [
          {
            "uv": [0, 0],
            "uv_size": [64, 64],
