          {
            "uv": [64, 0],
            "uv_size": [32, 32],
            "size_multiplier": "variable.size_mult * 0.5",
            "tint_multiplier": [1.0, 0.75, 0.45, "variable.alpha * 0.85"]
          }
        ]
      },

      "minecraft:particle_physics": {
        "drag": 0.85,
        "acceleration": [0, 0.01, 0],
        "initial_velocity": [0, 0.02, 0]
