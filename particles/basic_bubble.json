{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:basic_bubble_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/particles"
      }
    },

    "curves": {
      "variable.alpha_fade": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.6, 0.85, 0.7, 0.0]
      },

      "variable.wobble": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.4, -0.3, 0.5, -0.2]
      },

      "variable.size_pulse": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.7, 1.0, 1.1, 0.85]
      },

      "variable.rise_accel": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.4, 0.8, 1.0, 1.0]
      }
    },

    "components": {
      "minecraft:emitter_rate_instant": {
        "num_particles": 1
      },

      "minecraft:emitter_lifetime_once": {},

      "minecraft:emitter_shape_point": {
        "direction": [
          "variable.direction.x * 0.2 + Math.random(-1, 1) * 0.02",
          "variable.direction.y * 0.2 + Math.random(-1, 1) * 0.02",
          "variable.direction.z * 0.2 + Math.random(-1, 1) * 0.02"
        ]
      },

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "2 / ((Math.Random(0.0, 1.0) * 0.8 + 0.2) * 5)"
      },

      "minecraft:particle_expire_if_not_in_blocks": [
        "minecraft:water",
        "minecraft:flowing_water",
        "minecraft:bubble_column"
      ],

      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [
          "math.sin(v.particle_age * 6.0 + variable.particle_random_1 * 6.28) * 0.35 * variable.wobble",
          "0.8 + variable.rise_accel * 0.6",
          "math.cos(v.particle_age * 6.0 + variable.particle_random_2 * 6.28) * 0.35 * variable.wobble"
        ],
        "linear_drag_coefficient": 5.25
      },

      "minecraft:particle_appearance_billboard": {
        "size": [
          "(0.05 * variable.particle_random_1 + 0.10) * (variable.particle_random_2 * 0.9 + 0.2) * variable.size_pulse",
          "(0.05 * variable.particle_random_1 + 0.10) * (variable.particle_random_2 * 0.9 + 0.2) * variable.size_pulse"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "uv": [0, 16],
          "uv_size": [8, 8]
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": {
          "interpolant": "v.particle_age / v.particle_lifetime",
          "gradient": {
            "0.0":  [0.72, 0.88, 1.0, "variable.alpha_fade * 0.75"],
            "0.25": [0.75, 0.90, 1.0, "variable.alpha_fade * 0.82"],
            "0.6":  [0.80, 0.93, 1.0, "variable.alpha_fade * 0.70"],
            "1.0":  [0.85, 0.95, 1.0, 0.0]
          }
        }
      },

      "minecraft:particle_appearance_lighting": {}
    }
  }
}
