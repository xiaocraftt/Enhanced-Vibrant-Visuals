{
  "format_version": "1.21.60",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:totem_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/particles"
      }
    },
    "components": {
      "minecraft:emitter_initialization": {
        "creation_expression": "v.burst_wave = math.floor(v.particle_random_4 * 4); v.spin_dir = v.particle_random_3 > 0.5 ? 1.0 : -1.0; v.size_class = math.floor(v.particle_random_1 * 3);"
      },

      "minecraft:emitter_rate_steady": {
        "spawn_rate": 600,
        "max_particles": 220
      },

      "minecraft:emitter_lifetime_once": {
        "active_time": 0.38
      },

      "minecraft:emitter_shape_sphere": {
        "radius": 0.18,
        "direction": "outwards"
      },

      "minecraft:particle_initial_speed": "math.random(12.0, 52.0) * (1.0 + v.size_class * 0.4)",

      "minecraft:particle_initial_spin": {
        "rotation": "v.particle_random_2 * 360",
        "rotation_rate": "v.spin_dir * math.random(80, 280)"
      },

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "2.2 + v.particle_random_1 * 1.8 + v.size_class * 0.5"
      },

      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [
          "math.sin(v.particle_random_3 * 6.28 + v.particle_age * 2.2) * 2.5",
          "6.5 - v.particle_age * 9.0",
          "math.cos(v.particle_random_3 * 6.28 + v.particle_age * 2.2) * 2.5"
        ],
        "linear_drag_coefficient": 8.5,
        "rotation_acceleration": "v.spin_dir * math.lerp(80, 0, math.clamp(v.particle_age / (2.2 + v.particle_random_1 * 1.8), 0, 1))"
      },

      "minecraft:particle_appearance_billboard": {
        "size": [
          "math.lerp(0.0, 0.06 + v.size_class * 0.055 + v.particle_random_2 * 0.04, math.clamp(v.particle_age / 0.08, 0, 1)) * math.lerp(1.0, 0.0, math.pow(math.clamp(v.particle_age / (2.2 + v.particle_random_1 * 1.8 + v.size_class * 0.5), 0, 1), 1.6))",
          "math.lerp(0.0, 0.06 + v.size_class * 0.055 + v.particle_random_2 * 0.04, math.clamp(v.particle_age / 0.08, 0, 1)) * math.lerp(1.0, 0.0, math.pow(math.clamp(v.particle_age / (2.2 + v.particle_random_1 * 1.8 + v.size_class * 0.5), 0, 1), 1.6))"
        ],
        "facing_camera_mode": "rotate_xyz",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "flipbook": {
            "base_UV": [ 0, 88 ],
            "size_UV": [ 8, 8 ],
            "step_UV": [ 8, 0 ],
            "frames_per_second": 12,
            "max_frame": 8,
            "stretch_to_lifetime": true,
            "loop": false
          }
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": {
          "gradient": {
            "0.00": [ 1.00, 0.95, 0.30, 1.0 ],
            "0.18": [ 0.85, 1.00, 0.10, 1.0 ],
            "0.32": [ 0.20, 0.90, 0.15, 1.0 ],
            "0.48": [ 1.00, 0.80, 0.05, 1.0 ],
            "0.62": [ 0.50, 1.00, 0.20, 1.0 ],
            "0.75": [ 1.00, 0.60, 0.05, 1.0 ],
            "0.88": [ 0.25, 0.85, 0.05, 1.0 ],
            "1.00": [ 1.00, 1.00, 0.40, 1.0 ]
          },
          "interpolant": "v.particle_random_2"
        }
      },

      "minecraft:particle_appearance_lighting": {}
    }
  }
}
