{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:blue_flame_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/flame"
      }
    },

    "events": {
      "ignite_blue_glow": {
        "particle_effect": {
          "effect": "dynamic:torch_bloom_blue",
          "type": "emitter"
        }
      }
    },

    "curves": {
      "variable.alpha_fade": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [1.0, 0.8, 0.55, 0.25, 0.0]
      }
    },

    "components": {
      "minecraft:emitter_rate_manual": {
        "max_particles": 2
      },

      "minecraft:emitter_lifetime_expression": {
        "activation_expression": 1
      },

      "minecraft:emitter_shape_sphere": {
        "radius": 0.004
      },

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(0.6, 0.9)"
      },

      "minecraft:particle_lifetime_events": {
        "timeline": {
          "0": "ignite_blue_glow"
        }
      },

      "minecraft:particle_appearance_billboard": {
        "size": [
          "0.13 - (0.1 * v.particle_age)",
          "0.13 - (0.1 * v.particle_age)"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "uv": [0, 24],
          "uv_size": [12, 12]
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": [
          0.45,
          0.85,
          1.0,
          "variable.alpha_fade"
        ]
      },

      "minecraft:particle_physics": {
        "drag": 0.88,
        "acceleration": [0, 0.035, 0],
        "initial_velocity": [
          "math.random(-0.01, 0.01)",
          "math.random(0.015, 0.03)",
          "math.random(-0.01, 0.01)"
        ]
      }
    }
  }
}
