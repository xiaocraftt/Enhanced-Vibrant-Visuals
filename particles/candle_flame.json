{
  "format_version": "1.21.60",
  "particle_effect": {
    "description": {
      "identifier": "minecraft:candle_flame_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/particles"
      }
    },

    "events": {
      "ignite_candle_glow": {
        "particle_effect": {
          "effect": "dynamic:candle_bloom",
          "type": "emitter"
        }
      }
    },

    "curves": {
      "variable.alpha_fade": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.95, 0.85, 0.5, 0.0]
      },

      "variable.flicker": {
        "type": "catmull_rom",
        "input": "v.particle_age",
        "horizontal_range": "v.particle_lifetime",
        "nodes": [0.0, 0.6, 1.0, 0.7, 0.2]
      }
    },

    "components": {
      "minecraft:emitter_initialization": {
        "creation_expression": "v.flicker_phase = math.random(0, 6.28); v.flicker_rate = math.random(6.0, 14.0);"
      },

      "minecraft:emitter_rate_manual": {
        "max_particles": 100
      },

      "minecraft:emitter_lifetime_expression": {
        "activation_expression": 1,
        "expiration_expression": 0
      },

      "minecraft:emitter_shape_sphere": {
        "radius": 0.012,
        "direction": [ 0, 0, 0 ]
      },

      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(0.55, 0.95)"
      },

      "minecraft:particle_lifetime_events": {
        "timeline": {
          "0": "ignite_candle_glow"
        }
      },

      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [
          "math.sin(v.flicker_rate * v.particle_age + v.flicker_phase) * 0.018",
          "0.028",
          "math.cos(v.flicker_rate * v.particle_age + v.flicker_phase + 1.57) * 0.014"
        ],
        "linear_drag_coefficient": 0.92
      },

      "minecraft:particle_appearance_billboard": {
        "size": [
          "math.max((0.055 + v.particle_random_1 * 0.04) * (1.0 - v.particle_age / v.particle_lifetime), 0.0)",
          "math.max((0.055 + v.particle_random_1 * 0.04) * (1.0 - v.particle_age / v.particle_lifetime), 0.0)"
        ],
        "facing_camera_mode": "lookat_xyz",
        "uv": {
          "texture_width": 128,
          "texture_height": 128,
          "uv": [ 0, 24 ],
          "uv_size": [ 8, 8 ]
        }
      },

      "minecraft:particle_appearance_tinting": {
        "color": [
          "math.lerp(1.0, 0.95, math.clamp(v.particle_age / v.particle_lifetime, 0, 1))",
          "math.lerp(0.78, 0.42, math.clamp(v.particle_age / v.particle_lifetime, 0, 1)) + v.particle_random_2 * 0.08",
          "math.lerp(0.28, 0.06, math.clamp(v.particle_age / v.particle_lifetime, 0, 1))",
          "variable.alpha_fade"
        ]
      },

      "minecraft:particle_appearance_lighting": {}
    }
  }
}
